@using Jedznaplus.Resources

@{
    ViewBag.Title = "Zmień avatar";
}
@Html.Partial("_naglowek_cialo")
<h2>Zmień avatar</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (ViewBag.AvatarURL == ConstantStrings.DefaultUserAvatar)
    {
        <input type="file" name="file" accept="image/jpeg,image/png">
        <br>
        <input type="submit" name="dodajAvatar" value="Dodaj" id="DodajAvatar" class="btn btn-default" />
    <br>
    }
    else
    {
        @Html.ActionLink("Usuń bieżące zdjęcie", "DeleteAvatar")
        <br>
    }

@Html.Partial("_stopka")
}
@Scripts.Render("~/Scripts/Jedznaplus/EmptyAvatar.js")

