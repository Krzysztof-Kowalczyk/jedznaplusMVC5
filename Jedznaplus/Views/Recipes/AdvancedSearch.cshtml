@model Jedznaplus.Models.ExcludeRecipe
@{
    ViewBag.Title = "Wyszukiwanie zaawansowane";
}
<div id="header">
    <div id="header-wrap">

        <div class="inner">

            <!-- Logo -->
            <div id="logo">
                <a href=".."><img src="~/Resources/Images/logo.png" alt="Ingredients"></a>

            </div>
            <div class="wide blank">
                <div class="top"></div>
                <div class="mid">

                    <div class="menu">
                        <ul id="menu-category-menu-1" class="menu">
                            <li class="test"><a href=".."><span>Home</span></a></li>
                            <li class="test"><a href="http://themes.divwrap.com/ingredients/category/appetizers/"><span>Appetizers</span></a></li>
                            <li class="test"><a href="http://themes.divwrap.com/ingredients/category/beverages/"><span>Beverages</span></a></li>
                            <li class="test"><a href="http://themes.divwrap.com/ingredients/category/breakfast/"><span>Breakfast</span></a></li>
                            <li class="test"><a href="http://themes.divwrap.com/ingredients/category/desserts/"><span>Desserts</span></a></li>
                            <li class="test"><a href="http://themes.divwrap.com/ingredients/category/main-dishes/"><span>Main Dishes</span></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="content" class="inner">

        <!--=== Begin Main Column ===-->
        <div id="main-col">

            <div class="internal">

                <div class="repeat">

                    <!--=== Begin Contact Form ===-->


                    <h2>Wyszukiwanie zaawansowane</h2>

                    <div id="AdvancedearchArea">

                        @using (Html.BeginForm("AdvancedSearch", "Recipes", FormMethod.Post, new { name = "frm", id = "frm" }))
                        {
                            <fieldset>
                                <span id="validationJS" class="text-danger"></span>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.MaxTime)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.MaxTime)
                                </div>


                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Vegetarians)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.Vegetarians)
                                </div>


                                <div class="editor-label">
                                    @Html.LabelFor(model => model.NotAlergic)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.NotAlergic)
                                </div>
                                <br>

                                <div>
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.WantedIngredients):
                                    </div>
                                    <ul id="wantedingredientEditor" style="list-style-type: none"> </ul>
                                </div>

                                <a id="addAnotherWanted" href="#">Dodaj kolejny pożądany składnik</a>
                                <br><br>

                                <div>
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.ExcludeIngredients):
                                    </div>
                                    <ul id="excludeingredientEditor" style="list-style-type: none"> </ul>
                                </div>

                                <a id="addAnother" href="#">Dodaj kolejny wykluczony składnik</a>
                                <br><br>

                            </fieldset>

                            <input type="submit" value="Szukaj" class="btn btn-default" />
                            <br>
                        }
                    </div>
                    <!--=== End Contact Form ===-->


                </div>



            </div>

        </div>
        <!--=== End Main Column ===-->

    </div>
    <!--=== End Sidebar ===-->

</div>

@Scripts.Render("~/Scripts/Jedznaplus/AdvancedSearch.js")
