@using PagedList.Mvc
@model PagedList.IPagedList<Jedznaplus.Models.Recipe>

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

<h1 class="title">Wyniki wyszukiwania</h1>
@Html.Partial("_CreateNewRecipeButton")

@if (!Model.Any())
{
    <p> Nie znaleziono przepisów spełniających podane kryteria</p>
}

else
{
    @Html.Partial("_RecipeList", Model)

    @Html.PagedListPager(Model, page => Url.Action("AdvancedSearch", new {er=ViewBag.ExcludeRecipe,page, pageSize = Model.PageSize }))
}




