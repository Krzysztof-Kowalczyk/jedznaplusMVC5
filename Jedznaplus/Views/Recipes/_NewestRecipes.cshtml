@model IEnumerable<Jedznaplus.Models.ViewModels.NewestRecipesViewModel>

<div id="NewestRecipes">

    @foreach (var item in Model)
    {
        <div class="miniaturkaNr">
            <h3 style="width: 200px; word-wrap: break-word; font-size:12pt"> @Html.DisplayFor(modelItem => item.Name)</h3>
            <a href="@Url.Action("Details", new { id = item.Id})">
                <img src="@Url.Content(item.ImageUrl)" alt="image" width="100" height="100" />
            </a>
        </div>
    }
</div>
