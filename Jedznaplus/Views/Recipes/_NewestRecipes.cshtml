@model IEnumerable<Jedznaplus.Models.ViewModels.NewestRecipesViewModel>

<div id="NewestRecipes">

    @foreach (var item in Model)
    {
        <div class="miniaturkaNr">
            <h3 class="BestNewestName"> @Html.DisplayFor(modelItem => item.Name)</h3>
            <a href="@Url.Action("Details", new { id = item.Id})">
                <img src="@Url.Content(item.ImageUrl)" alt="image" width="150" height="150" />
            </a>
        </div>
    }
</div>
